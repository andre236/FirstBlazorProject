@page "/event"
@rendermode InteractiveServer

<h3>Event</h3>

<div>
	<button class="btn btn-secondary" onclick="javascript:alert('Clicou no botão')">"Clique Javascript"</button>
	<button class="btn btn-primary" @onclick="ClickButton">Clique-me Blazor</button>
</div>

<div class="mt-3">
	<button class="btn btn-sucess" @onclick="@((e) => {Text=$"Click Position: x = {e.ScreenX} y= {e.ScreenY}".ToString();})">Clique-me (Blazor-Inline)</button>
</div>

@Text

@code {
	private string Text { get; set; } = string.Empty;

	public void ClickButton(MouseEventArgs e)
	{
		Text = $"Click Position: x = {e.ScreenX} y= {e.ScreenY} ";
	}
}
