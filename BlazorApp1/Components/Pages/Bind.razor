@page "/bind"
@rendermode InteractiveServer
@*
	rendermode:
	~ None (Sem interatividade): Vazio
	~ Server: InteractiveServer
	~ WebAssembly: InteractiveWebAssembly
	~ Auto (Server > WebAssembly): InteractiveAuto
*@


<h3>Bind</h3>

<div>
	@*
	Bind ~~ One~Way (Unidirecional): Get;
	*@

	<p>
		@Text
	</p>

</div>

<div class="mt-3">
	@*
	Bind ~~ Two~Way (Bidirecional): Get; Set;
	*@
	<input @bind="Text" @bind:event="oninput" class =" form-control"/>
</div>


<div class="mt-3">
	@*
	Bind ~~ Two~Way (Bidirecional): Get; Set * Virtual;
	*@
	<input @bind:get="Text" @bind:set="(value)=> {Text = value;}" @bind:event="oninput" class =" form-control"/>
</div>

<div class="mt-3">
	@*
	Bind ~~ Two~Way (Bidirecional): Get; Set * Virtual;
	*@
	<input @bind:get="Text" @bind:set="(value)=> {Text = value;}" @bind:event="oninput" class =" form-control"/>
</div>



@code {
	private string? Text { get; set; } = "I'm String";
}
